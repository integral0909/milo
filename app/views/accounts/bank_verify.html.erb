<% set_meta_tags :site => 'Verify Bank â€¢ Shift',
  :noindex => true
%>

<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <div class="signup">
      <h1 class="marg-16"><span>Checking Account</span> Verify Bank</h1>
      <p>Verify your bank account with micro-deposits <i class="fa fa-question helper" data-toggle="tooltip" data-placement="top" data-html="true" title="In order to verify your account we need to send two micro-deposits to your account. The micro-deposits will be deposited into your account in 1-3 business days. After receiving the micro-deposits enter them into your Shift account to confirm."></i></p>
      <%= render "layouts/messages" %>
      <%= form_for (@account), :url => {controller: "accounts", action: "update", id: @account.id, user_id: @user.id}, :html => { :method => :put} do |f| %>
        <%= form_errors @account %>
        <fieldset class="form-group">
          <label>Account Number</label>
          <%= f.text_field :bank_account_number, class: "form-control", require: true %>
        </fieldset>
        <fieldset class="form-group">
          <label>Routing Number</label>
          <%= f.text_field :bank_routing_number, class: "form-control", require: true %>
        </fieldset>
        <div class="spacer -space-16"></div>
        <%= f.submit "Verify", class: "button -blue -full" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <ul class="signup-steps">
      <li><span></span> Basic Info</li>
      <li><span></span> Mobile Number</li>
      <li class="active"><span></span> Checking Account</li>
    </ul>
  </div>
</div>
