<% set_meta_tags :site => 'Verify Bank â€¢ Milo',
  :noindex => true
%>

<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <div class="signup">
      <h1 class="marg-16"><span>Checking Account</span> Verify Bank</h1>
      <p><%= @account.name %></p>
      <%= render "layouts/messages" %>
      <%= form_for (@account), :url => {controller: "accounts", action: "update_with_numbers", id: @account.id, user_id: @user.id}, :html => { :method => :put} do |f| %>
        <div class="modal-body">
          <%= form_errors @account %>
          <fieldset class="form-group">
            <label>Account Number</label>
            <%= f.text_field :bank_account_number, class: "form-control", require: true %>
          </fieldset>
          <fieldset class="form-group">
            <label>Routing Number</label>
            <%= f.text_field :bank_routing_number, class: "form-control", require: true %>
          </fieldset>
        </div>
        <div class="spacer -space-16"></div>
        <%= f.submit "Verify", class: "button -blue -full" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <ul class="signup-steps">
      <li><span></span> Basic Info</li>
      <li><span></span> Mobile Number</li>
      <li class="active"><span></span> Checking Account</li>
    </ul>
  </div>
</div>
