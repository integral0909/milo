<% set_meta_tags :site => 'Employees • Works • Shift',
  :noindex => true
%>

<div class="page-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <%= render "layouts/messages" %>
        <h5><%= @employees.size - 1 %> Employees</h5>
        <table class="table">
          <thead class="thead-default">
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Contribution Total</th>
              <th>Last Contribution</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @emp_data.each do |e| %>
              <% if e['id'] != @biz_owner.id %>
                <tr>
                  <th><%= e['name'] %></th>
                  <td>Active</td>
                  <td><%= e['total_contrib'] ? e['total_contrib'] : '-' %></td>
                  <td><%= e['last_contrib'] ? "$#{e['last_contrib']}" : '-' %></td>
                  <td><%= link_to "Remove", "/employees/#{e['id']}", class: "-remove", method: :delete, data: {confirm: "Are you sure you want to remove #{e['name']}?"}, remote: true %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-4">
        <%= link_to "Add Employee", new_user_invitation_path %>
      </div>
    </div>
  </div>
</div>
