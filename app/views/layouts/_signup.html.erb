<body class="milo-signup">

  <div class="container">
    <div class="row">
      <% if current_page?(new_user_registration_path) %>
        <a href="/users/sign_in" style="float:right; color: #2D323E;">Log In</a>
      <% else %>
        <a href="/users/sign_up" style="float:right; color: #2D323E;">Sign Up</a>
      <% end %>
      <a href="/" class="signup-logo">Milo</a>
    </div>

    <%= yield %>

  </div>

  <%= render :partial => 'layouts/analytics' %>

</body>
