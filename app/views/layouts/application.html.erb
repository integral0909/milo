<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= display_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script type="text/javascript">
    // Hide / Show Sign Up Forms
    $(function() {
      $(".email-show").click(function() {
        $(".social-signup").hide();
        $(".email-signup").show();
      });
      $(".social-show").click(function() {
        $(".email-signup").hide();
        $(".social-signup").show();
      });
    });
    // Sidebar Equal Height to Page Content
    $(function() {
      $(".sidebar").css("height", $(".page-content").height() + 80);
    });
  </script>

</head>
<!-- current_page?(root_path) || -->
<% if user_signed_in? %>
  <%= render :partial => 'layouts/app' %>
<% else %>
  <% if current_page?(new_user_registration_path) || current_page?(new_user_session_path) %>
    <%= render :partial => 'layouts/signup' %>
  <% end %>
<% end %>
</html>
