<% set_meta_tags :site => 'History â€¢ Milo' %>

<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="milo-card full-history">
          <% if @transfers.present? %>
            <div class="mc-title no-marg">History</div>
            <table class="table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Status</th>
                  <th>Amount</th>
                </tr>
              </thead>
              <tbody>
                <% @transfers.each do |tr| %>
                  <tr>
                    <td><%= tr.date.to_date.strftime("%B %d, %Y") %></td>
                    <td><%= tr.status == '200' ? "Processed" : "Pending" %></td>
                    <td>$<%= tr.roundup_amount %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="mc-title">History</div>
            <p>No transfers currently exist.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
