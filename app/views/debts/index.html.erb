<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Active Debts</th>
      <th>Monthly Budget</th>
      <th>Min. Payments</th>
      <th>Extra Payment</th>
      <th>Payments Made</th>
      <th>Overall Progress</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%= @debts.size %></th>
      <th><%= number_to_currency(current_user.budget) %></th>
      <th><%= number_to_currency(current_user.minimum_payments) %></th>
      <th><%= number_to_currency(current_user.extra_payment) %></th>
      <th>-</th>
      <td>-</td>
    </tr>
  </tbody>
</table>

<hr/>

<h3>Debts</h3>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
      <th>Interest Rate</th>
      <th>Payment</th>
      <th>Monthly Interest</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <th><%= debt.account_name %></th>
        <th><%= number_to_currency(debt.current_balance) %></th>
        <th><%= number_to_percentage(debt.apr) %></th>
        <th><%= number_to_currency(debt.minimum_payment) %></th>
        <th><%= number_to_currency(debt.monthly_interest) %></th>
        <th><%= debt.due_date %></th>
        <td><%= link_to 'Show', debt %></td>
        <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
        <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Debt', new_debt_path %>

</div>
</div>
</div>
</div>
