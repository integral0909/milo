<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <div class="signup">
      <h1><span>Sign Up</span> Make Change Happen</h1>
      <%= render "layouts/messages" %>
      <%= form_for resource, as: resource_name, url: invitation_path(resource_name), html: { class: "email-signp", method: :put } do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :invitation_token %>
        <fieldset class="form-group">
          <label>Full Name</label>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name", required: true %>
        </fieldset>
        <fieldset class="form-group">
          <label>Postal Code</label>
          <%= f.text_field :zip, class: "form-control", placeholder: "xxxxx", required: true %>
        </fieldset>
        <fieldset class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", required: true %>
        </fieldset>
        <fieldset class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
          <small class="text-muted">Strong Password <i class="fa fa-question helper" data-toggle="tooltip" data-placement="top" data-html="true" title="<strong>Password Requirements:</strong><ul><li>minimum of 8 characters</li><li>one lowercase</li><li>one uppercase</li><li>one number</li></ul>"></i></small>
        </fieldset>
        <fieldset class="checkbox">
          <label>
            <%= f.check_box :agreement, required: true %>
            I agree to Milo's <a href="/privacy" target="_blank">Privacy Policy</a> and <a href="/terms" target="_blank">Terms of Service</a>. I also agree to Dwolla's <a href="https://www.dwolla.com/legal/tos?whitelabel" target="_blank">Privacy Policay</a> and <a href="https://www.dwolla.com/legal/privacy?whitelabel" target="_blank">Terms of Service</a>.
          </label>
        </fieldset>
        <%= f.hidden_field :invited, value: true %>
        <button type="submit" class="button -full -blue">Sign Up</button>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <ul class="signup-steps">
      <li class="active"><span></span> Basic Info</li>
      <li><span></span> Mobile Number</li>
      <li><span></span> Checking Account</li>
    </ul>
  </div>
</div>
