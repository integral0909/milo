<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h3>Edit <%= resource_name.to_s.humanize %></h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <fieldset class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </fieldset>
          <fieldset class="form-group">
            <label>Postal Code</label>
            <%= f.text_field :zip, class: "form-control" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
          </fieldset>
          <hr />
          <h5>Phone Verification</h5>
          <fieldset class="form-group">
            <label>Phone</label>
            <%= f.text_field :mobile_number, class: "form-control" %>
            <% if resource.is_verified %>
              You're mobile number is verified.
            <% end%>
          </fieldset>
          <%= mobile_verification_button %>
          <%= verify_mobile_number_form %>
          <hr />
          <h5>On-Demand Transfers</h5>
          <p>Your bank account has been verified. The only thing left for us to do is to authorize the On-Demand Transfers.</p>
          <p>On-Demand Transfers allow Milo to automatically transfer your weekly round ups from your checking into your savings account.</p>
          <fieldset class="checkbox" style="text-align: center;">
            <label>
              <%= f.check_box :on_demand, required: true %>
              On-Demand Transfer Authorization <i class="fa fa-question helper" data-toggle="tooltip" data-placement="top" data-html="true" title="<strong>On-Demand Transfer:</strong>In order to save automatically and transfer funds from your checking to your Milo savings account we need your authorization. You may disable On-Demand Transfers at anytime from your settings."></i>
            </label>
          </fieldset>
          <hr />
          <%= f.submit "Update", class: "button -green" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
